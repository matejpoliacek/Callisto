<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hologram_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/hologram_light" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:src="@drawable/eu_flag_hologram" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/hologram_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/main_header"
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:letterSpacing="0.05"
                android:shadowColor="@color/hologram_blue"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="60"
                android:text="GSAT 102"
                android:textColor="@color/hologram_blue"
                android:textSize="40dp" />

            <View
                android:layout_width="44dp"
                android:layout_height="match_parent"></View>

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="left"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0"></View>

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/availability_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:shadowColor="@color/hologram_blue"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="30"
                    android:text="AVAILABILITY"
                    android:textColor="@color/hologram_blue"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/availability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:shadowColor="@color/hologram_blue"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="30"
                    android:text="80%"
                    android:textColor="@color/hologram_blue"
                    android:textSize="30dp" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_weight="0"></View>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/position_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:shadowColor="@color/hologram_blue"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="30"
                    android:text="POSITION"
                    android:textColor="@color/hologram_blue"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:shadowColor="@color/hologram_blue"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="30"
                    android:text="15.684112°\n12.687296°"
                    android:textColor="@color/hologram_blue"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:src="@drawable/galileo_satellite_hologram" />
</android.widget.RelativeLayout>