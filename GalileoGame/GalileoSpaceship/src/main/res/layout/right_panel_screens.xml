<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left">

    <ImageView
        android:id="@+id/background"
        android:layout_width="326dp"
        android:layout_height="152dp"
        app:srcCompat="@drawable/console_right_cabin" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="154dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="172dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="27dp"></View>

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:alpha="0.75"
                android:fontFamily="@font/robotomono_medium"
                android:gravity="center"
                android:text="00/00/00  00:00"
                android:textColor="@color/console"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="21dp"></View>

            <TextView
                android:id="@+id/dop"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:alpha="0.75"
                android:fontFamily="@font/robotomono_medium"
                android:gravity="center"
                android:text="> HDOP: 25.8\n> VDOP: 53.8"
                android:textColor="@color/console"
                android:textSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="53dp"
            android:layout_height="170dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="23dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="48dp"
                    android:layout_height="match_parent"></View>

                <TextView
                    android:id="@+id/clock"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/robotomono_medium"
                    android:gravity="center"
                    android:text="00:05"
                    android:textColor="@color/console" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ngalileo"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:alpha="0.75"
                    android:fontFamily="@font/robotomono_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/console"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/ngps"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:alpha="0.75"
                    android:fontFamily="@font/robotomono_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/console"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:alpha="0.75"
                    android:fontFamily="@font/robotomono_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/console"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:alpha="0.75"
                    android:fontFamily="@font/robotomono_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/console"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:alpha="0.75"
                    android:fontFamily="@font/robotomono_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/console"
                    android:textSize="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="28dp"></View>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>