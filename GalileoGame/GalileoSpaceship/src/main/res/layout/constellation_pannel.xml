<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left">

    <ImageView
        android:id="@+id/background"
        android:layout_width="368dp"
        android:layout_height="282dp"
        android:scaleType="fitCenter"
        android:src="@drawable/constellation_panel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="171dp"
        android:layout_height="201dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checkedButton="@id/galileo_switch"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/galileo_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/button_switch_selector"
                android:gravity="center"
                android:text="GALILEO"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/label_off"
                android:textSize="13dp"/>

            <RadioButton
                android:id="@+id/gps_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/button_switch_selector"
                android:gravity="center"
                android:text="GPS"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/label_off"
                android:textSize="13dp"/>

            <RadioButton
                android:id="@+id/all_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/button_switch_selector"
                android:gravity="center"
                android:text="ALL"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/label_off"
                android:textSize="13dp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/cancel_button_selector" />

            <ImageButton
                android:id="@+id/ok_button"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/ok_button_selector" />

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>