<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left">

    <ImageView
        android:id="@+id/background"
        android:layout_width="368dp"
        android:layout_height="407dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/constellation_panel" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.example.lionelgarcia.galapptest2.GButtonSwitch
                android:id="@+id/beidou_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="BEIDOU"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.example.lionelgarcia.galapptest2.GButtonSwitch
                android:id="@+id/glonass_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="GLONASS"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.example.lionelgarcia.galapptest2.GButtonSwitch
                android:id="@+id/galileo_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="GALILEO"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.example.lionelgarcia.galapptest2.GButtonSwitch
                android:id="@+id/gps_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="GPS"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.example.lionelgarcia.galapptest2.GButtonSwitch
                android:id="@+id/qzss_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="QZSS"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.example.lionelgarcia.galapptest2.GButtonSwitch
                android:id="@+id/sbas_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="SBAS"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.example.lionelgarcia.galapptest2.GStickSwitch
                android:id="@+id/all_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="ALL" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.example.lionelgarcia.galapptest2.GStickSwitch
                android:id="@+id/galileo_only_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:label="GALILEO ONLY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/cancel_button_selector" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageButton
                android:id="@+id/ok_button"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/ok_button_selector" />

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>